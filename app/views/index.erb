<div class='container'>
  <form id='create-workout' action="/workouts" method="post"><input type="submit" value="Log a workout"></form>
  <h1>Your Training Data</h1>
  <table id="log">
    <thead>
      <td>Date</td>
      <td>Run</td>
      <td>Swim</td>
      <td>Bike</td>
      <td>Description</td>
    </thead>
  <% Workout.where(year: Date.today.year).each do |workout| %>
    <tr id="<%= workout.id %>">
      <td><%= workout.month %>/<%= workout.day %>/<%= workout.year %></td>
      <td><%= workout.run %></td>
      <td><%= workout.swim %></td>
      <td><%= workout.bike %></td>
      <td class="description"><%= workout.description %></td>
    </tr>
  <% end %>
  </table>
</div>
